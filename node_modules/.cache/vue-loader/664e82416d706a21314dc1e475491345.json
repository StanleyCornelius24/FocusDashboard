del=\"fromDate\" @focus=\"clearStatus\" @keypress=\"clearStatus\"></datepicker>\n      <label>To Date</label>\n      <datepicker placeholder=\"Select Date\" :class=\"{ 'has-error': submitting && invalidToDate }\" v-model=\"toDate\" @focus=\"clearStatus\" @keypress=\"clearStatus\"></datepicker>\n      <p v-if=\"error && submitting\" class=\"error-message\">\n        ‚ùóPlease fill out all required fields\n      </p>\n      <button>Search</button>\n    </form>\n  </div>\n</template>\n\n\n<script>\n  export default {\n    name: 'client-form',\n    data() {\n      return {\n        submitting: false,\n        error: false,\n        success: false,\n        client: {\n          name: '',\n          email: '',\n        },\n      }\n    },\n    methods: {\n      handleSubmit() {\n        this.submitting = true\n        this.clearStatus()\n\n        if (this.invalidFromDate || this.invalidToDate) {\n          this.error = true\n          return\n        }\n\n        this.$emit('add:client', this.client)\n        this.error = false\n        this.success = true\n        this.submitting = false\n      },\n\n      clearStatus() {\n        this.success = false\n        this.error = false\n      },\n    },\n    computed: {\n      invalidFromDate() {\n        return this.fromDate === ''\n      },\n\n      invalidToDate() {\n        return this.toDate === ''\n      },\n    },\n  }\n</script>\n\n<style scoped>\n  form {\n    margin-bottom: 2rem;\n  }\n\n  [class*='-message'] {\n    font-weight: 500;\n  }\n\n  .error-message {\n    color: #d33c40;\n  }\n\n  .success-message {\n    color: #32a95d;\n  }\n</style>"]}]}